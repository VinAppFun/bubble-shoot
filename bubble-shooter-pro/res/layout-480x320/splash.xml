<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res/com.likeapp.sukudo"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/bg"       
    android:orientation="vertical" 
    android:gravity="center_horizontal">

    <LinearLayout
        android:id="@+id/adLayout"
        android:layout_width="fill_parent"
        android:layout_height="50dip"       
        android:layout_centerHorizontal="true" 
        android:layout_gravity="center_horizontal">
    </LinearLayout>
 <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/logo" android:layout_marginTop="7dip" android:layout_marginBottom="40dip"  />
    

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal"
        android:orientation="vertical" >

        <Button
            android:id="@+id/resumeGameButton"
            style="@style/NavigationButton"
            android:layout_width="fill_parent"
            android:layout_height="37dip"
            
            android:background="@drawable/btn_continue"
            android:text="" />

        <Button
            android:id="@+id/newGameButton"
            style="@style/NavigationButton"
            android:layout_width="fill_parent"
            android:layout_height="37dip"            
            android:layout_marginTop="7dip"
            android:background="@drawable/btn_start"
            android:text="" />

        <Button
            android:id="@+id/selectLevelButton"
            style="@style/NavigationButton"
            android:layout_width="fill_parent"
            android:layout_height="37dip"
            
            android:layout_marginTop="7dip"
            android:background="@drawable/btn_choose_level"
            android:text="" />
	 
        <Button
            android:id="@+id/btnArcade"
            style="@style/NavigationButton"
            android:layout_width="fill_parent"
            android:layout_height="37dip"
            
            android:layout_marginTop="7dip"
            android:background="@drawable/btn_arcade"
            android:text="" />
		<Button
            android:id="@+id/moreAppButton"
            style="@style/NavigationButton"
            android:layout_width="fill_parent"
            android:layout_height="37dip"
            
            android:layout_marginTop="7dip"
            android:background="@drawable/btn_moregame"
            android:text=""
             />
		
        <Button
            android:id="@+id/settingsButton"
            style="@style/NavigationButton"
            android:layout_width="fill_parent"
            android:layout_height="37dip"
            
            android:layout_marginTop="7dip"
            android:background="@drawable/btn"
            android:text="@string/button_nav_settings"
            android:visibility="gone" />

        <Button
            android:id="@+id/helpButton"
            style="@style/NavigationButton"
            android:layout_width="fill_parent"
            android:layout_height="36dip"
            
            android:layout_marginTop="7dip"
            android:background="@drawable/btn"
            android:text="@string/button_nav_help"
            android:visibility="gone" />

        <Button
            android:id="@+id/aboutButton"
            style="@style/NavigationButton"
            android:layout_width="fill_parent"
            android:layout_height="36dip"
            
            android:layout_marginTop="7dip"
            android:background="@drawable/btn"
            android:text="@string/button_nav_about"
            android:visibility="gone" />
		
        

        <Button
            android:id="@+id/appPointButton"
            style="@style/NavigationButton"
            android:layout_width="fill_parent"
            android:layout_height="36dip"
            
            android:layout_marginTop="7dip"
            android:background="@drawable/btn"
            android:text=""
            android:visibility="gone" />
       
    </LinearLayout>
	
    
    <ImageView
        android:id="@+id/btnLeaderboard"
        android:layout_width="60dip"
        android:layout_height="60dip"       
        android:layout_marginBottom="2dip"
        android:layout_marginLeft="0dip"
        android:layout_gravity="left"
        android:background="@drawable/rank" />
	
</LinearLayout>